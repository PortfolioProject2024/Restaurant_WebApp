<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
   @*  <link rel="stylesheet" href="~/Admin/site.css" /> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    @RenderSection("Styles", required: false)
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #ffa500; /* Changed text color to orange */
        }
        .container {
            display: flex;
        }
        .sidebar {
            width: 250px;
            background-color: #1f1f1f;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar ul li {
            padding: 15px 20px;
            border-bottom: 1px solid #333;
        }
        .sidebar ul li a {
            color: #ffa500; /* Changed link color to orange */
            text-decoration: none;
            display: flex;
            align-items: center;
        }
        .sidebar ul li a i {
            margin-right: 10px;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <ul>
                <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <li><a href="#"><i class="fas fa-users"></i> Manage Users<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="manageUsersDropdown">
                            <li><a asp-controller="User" asp-action="Index">Users List</a></li>
                            <li><a asp-controller="User" asp-action="RoleIndex">Roles</a></li>
                            <li><a asp-controller="User" asp-action="AssignRole">Assign Roles</a></li>
                            <li><a asp-controller="User" asp-action="RemoveRole">Remove Role</a></li>
                            <li><a asp-controller="Table" asp-action="Index">Table Bookings</a></li>
                            <li><a asp-controller="AdminOrder" asp-action="Index">Total Orders</a></li>
                            <li><a asp-controller="Menu" asp-action="create">Add To menu</a></li>
                            <li><a asp-controller="Menu" asp-action="Index">Menu</a></li>

                    </ul>    
                    </li>
                    <li><a href="#"><i class="fas fa-cogs"></i> Settings</a></li>
                }
                @if (User.Identity.IsAuthenticated && User.IsInRole("employee"))
                {
                    <li><a href="#"><i class="fas fa-chart-line"></i> Reports</a></li>
                }
                @if (User.Identity.IsAuthenticated && User.IsInRole("customer"))
                {
                    <li><a href="#"><i class="fas fa-info-circle"></i> Help</a></li>
                }
            </ul>
        </div>
        <div class="content" id="content">

            @RenderBody()

        </div>
    </div>


    <button class="sidebar-toggler" id="sidebarToggle"><i class="fas fa-bars"></i></button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#sidebarToggle').click(function () {
                $('#sidebar').toggleClass('show');
                $('#content').toggleClass('show');
            });
        });
    </script>
</body>
</html>
