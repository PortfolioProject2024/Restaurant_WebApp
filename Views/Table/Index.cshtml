@model IEnumerable<Restaurant_WebApp.Models.TableBooking>

    @{
    ViewData["Title"] = "Table Bookings";
 
    }



<h1 style="color: #800080; margin-bottom:20px">Table Bookings</h1>

<div class="row mb-3">
    <div class="col">
        <form id="searchForm">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search by name, ID, date, or email" id="searchInput">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<table class="table">
    <thead style="color: #800080;">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
               
            </th>
            <th>
                Phone Number
              
            </th>
            <th>
                Persons
               
            </th>
            <th>
                Date
              
            </th>
            <th>
                From
              
            </th>
            <th>
                To
               
            </th>
            <th>
                Comments
              
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody style="color:orangered;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPersons)
                </td>
                <td>
                    @item.BookingDate.ToString("yyyy-MM-dd") 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (e) {
                e.preventDefault();
                var searchValue = $('#searchInput').val().trim().toLowerCase();
                $('tbody tr').each(function () {
                    var found = false;
                    $(this).find('td').each(function () {
                        var cellText = $(this).text().toLowerCase();
                        if (cellText.includes(searchValue)) {
                            found = true;
                            return false;
                        }
                    });
                    if (found) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}