@model IEnumerable<Restaurant_WebApp.Models.TableBooking>

    @{
    ViewData["Title"] = "Table Bookings";
    Layout = "/Views/CustomeLayout/_AdminLayout.cshtml";
    }



<div class="container my-4">
    <h1 style="color: #ffa500;">Table Bookings</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalPersons)</th>
                    <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Comments)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalPersons)</td>
                        <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Comments)</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>