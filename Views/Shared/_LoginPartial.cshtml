
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex align-items-center">

        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: #800080;">
                <i class="bi bi-person"></i> Hello @User.Identity?.Name!
            </a>
      
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link" style="color: #800080;">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
       
    </div>
}
else
{
    <div class="d-flex align-items-center">

        <a class="nav-link  me-4" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i> Register
            </a>

        <a class="nav-link ms-1" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        
    </div>
}
