@model Restaurant_WebApp.Models.ViewModels.UserWithRolesVM

@{
    ViewData["Title"] = "Assign Role";
}

<h2>Assign Role</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label asp-for="SelectedUserId">Select User</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            <option value="">-- Select User --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRoleId">Select Role</label>
        <select asp-for="SelectedRoleId" class="form-control" asp-items="Model.AllRoles">
            <option value="">-- Select Role --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}