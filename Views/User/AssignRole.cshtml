@model Restaurant_WebApp.Models.ViewModels.UserWithRolesVM

@{
    ViewData["Title"] = "Assign Role";
    Layout = "/Views/CustomeLayout/_AdminLayout.cshtml";
}

<div class="container my-4" style="max-width:600px">
    <div class="card shadow" style="margin-top:100px">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Assign Role</h2>
        </div>
        <div class="card-body">
            <form asp-action="AssignRole" method="post">
                <div class="form-group">
                    <label asp-for="SelectedUserId" class="font-weight-bold">Select User</label>
                    <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="SelectedUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedRoleId" class="font-weight-bold">Select Role</label>
                    <select asp-for="SelectedRoleId" class="form-control" asp-items="Model.AllRoles">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Assign Role</button>
            </form>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


