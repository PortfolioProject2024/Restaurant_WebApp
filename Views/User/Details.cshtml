@model Restaurant_WebApp.Models.ViewModels.UserWithRolesVM

@{
    ViewData["Title"] = "User Details";
    Layout = "/Views/CustomeLayout/_AdminLayout.cshtml";
}

<h1 style="margin-left: 30px;">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2>User Information</h2>
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Model.FirstName</dd>

                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Model.LastName</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "User")" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Back to List</a>
    </div>
</div>