@model Restaurant_WebApp.Models.User

@{
    Layout = "/Views/CustomeLayout/_AdminLayout.cshtml";
}

<h1>Delete User</h1>
<h3 class="text-danger">Are you sure you want to delete this user?</h3>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4>User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>