@model Restaurant_WebApp.Models.ViewModels.FoodItemViewModel

<h2>Edit Food Item</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="FoodName">Name:</label>
        <input type="text" class="form-control" id="FoodName" name="FoodName" value="@Model.FoodName" required>
    </div>
    <div class="form-group">
        <label for="FoodDescription">Description:</label>
        <textarea class="form-control" id="FoodDescription" name="FoodDescription">@Model.FoodDescription</textarea>
    </div>
    <div class="form-group">
        <label for="FoodPrice">Price:</label>
        <input type="number" step="0.01" class="form-control" id="FoodPrice" name="FoodPrice" value="@Model.FoodPrice" required>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name", Model.CategoryId))" class="form-control" required>
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.ImageFile, "Upload Image")
        @Html.TextBoxFor(model => model.ImageFile, new { type = "file", @class = "form-control-file" })
        @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
    </div>


    

    <div class="form-group">
        <label for="ImageUrl">Current Image:</label><br />
        <img src="~/Files/@Model.ImageUrl" class="current-image" alt="Current Image" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" asp-controller="Menu" class="btn btn-secondary">Cancel</a>
</form>
