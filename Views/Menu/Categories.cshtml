@model IEnumerable<Restaurant_WebApp.Models.Category>

<link href="/Restaurant/assets/css/style.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<style>
    .table th,
    .table td {
        color: white;
    }
</style>

<section id="menu" class="menu section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Categories</h2>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <a asp-action="AddCategory" class="btn btn-primary">Add Category</a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post">
                                <button type="submit" class="btn btn-link text-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash"></i> 
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

