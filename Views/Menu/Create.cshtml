@model Restaurant_WebApp.Models.FoodItem


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FoodName">Food Name:</label>
        <input asp-for="FoodName" class="form-control" />
        <span asp-validation-for="FoodName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodDescription">Food Description:</label>
        <textarea asp-for="FoodDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="FoodDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodPrice">Food Price:</label>
        <input asp-for="FoodPrice" class="form-control" />
        <span asp-validation-for="FoodPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image URL:</label>
        <input asp-for="ImageUrl" type="file" class="form-control-file" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
