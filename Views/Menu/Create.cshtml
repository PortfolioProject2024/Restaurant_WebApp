@model Restaurant_WebApp.Models.ViewModels.FoodItemViewModel

@{
    Layout = "/Views/CustomeLayout/_BlackLayout.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #1e1e1e;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        background-color: #2e2e2e;
        color: #fff;
        border: 1px solid #444;
        padding: 0.75rem;
        border-radius: 4px;
        width: 100%;
        
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .form-control::placeholder {
            color: #888;
        }

    .form-control-lg {
        font-size: 1.2rem;
       
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 0.75rem 1.25rem;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

</style>

<h2 class="text-center mt-4">Create New Food Item</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post" class="form-container">
    <div class="form-group mb-4">
        <label for="FoodName" class="form-label">Name:&nbsp </label>
        <input type="text" class="form-control form-control-lg" id="FoodName" name="FoodName" value="@Model.FoodName" required>
    </div>
    <div class="form-group mb-4">
        <label for="FoodDescription" class="form-label">Description:&nbsp</label>
        <textarea class="form-control form-control-lg" id="FoodDescription" name="FoodDescription" rows="4">@Model.FoodDescription</textarea>
    </div>
    <div class="form-group mb-4">
        <label for="FoodPrice" class="form-label">Price:&nbsp </label>
        <input type="number" step="0.01" class="form-control form-control-lg" id="FoodPrice" name="FoodPrice" value="@Model.FoodPrice" required>
    </div>
    <div class="form-group mb-4">
        <label for="CategoryId" class="form-label">Category:&nbsp</label>
        <select class="form-control form-control-lg" id="CategoryId" name="CategoryId" required>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group mb-4">
        <label for="ImageFile" class="form-label">Image:&nbsp</label>
        <input type="file" class="form-control form-control-lg" id="ImageFile" name="ImageFile">
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Create</button>
    </div>
</form>
