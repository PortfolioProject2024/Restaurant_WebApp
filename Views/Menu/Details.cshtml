@model Restaurant_WebApp.Models.FoodItem

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.FoodName</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Food Name
        </dt>
        <dd class="col-sm-10">
            @Model.FoodName
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.FoodDescription
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.FoodPrice
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            
            @Model.Category.Name
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/Files/@Model.ImageUrl" class="img-thumbnail" alt="Food Image">
        </dd>
    </dl>
</div>
