@model List<Order>

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Customer Name</th>
            <th>Comments</th>
            <th>Order Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>

                <td>@order.TotalPrice</td>
                <td>@(order.Customer != null ? order.Customer.Name : "Unknown")</td>
                <td>@order.Comment</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>@item.Quantity x @(item.FoodItems != null ? item.FoodItems.FoodName : "Unknown")</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
