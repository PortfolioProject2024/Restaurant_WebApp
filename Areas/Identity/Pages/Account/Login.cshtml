@page
@model LoginModel

@{
    ViewData["Title"] = "";

    
}

<h1>@ViewData["Title"]</h1>

<div class="container pt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <section>
                <div class="card">
                    <div class="card-body">
                        <div class="pt-4 pb-2">
                            <div class="container d-flex justify-content-center">
                            </div>
                            <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                            <p class="text-center small">Enter your username &amp; password to login</p>
                        </div>
                        <div class="d-flex justify-content-center mb-4">
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('admin@mail.com', 'Admin_2024')">Super Admin</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('portfolio@mail.com', 'Admin_2024')">Admin</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('dawood.rizwan@outlook.com', 'Admin_2024')">Employee 1</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('natalieaktas@hotmail.com', 'Admin_2024')">Employee 2</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('test1@mail.com', 'Admin_2024')">Customer 1</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('test2@mail.com', 'Admin_2024')">Customer 2</button>
                            <button type="button" class="btn btn-secondary btn-sm me-2" onclick="fillAndSubmit('test3@mail.com', 'Admin_2024')">Customer 3</button>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="fillAndSubmit('test4@mail.com', 'Admin_2024')">Customer 4</button>
                        </div>

                        <form id="account" method="post" class="row g-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="col-12">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class="col-12">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function fillAndSubmit(email, password) {
            document.getElementById('Input_Email').value = email;
            document.getElementById('Input_Password').value = password;
            document.getElementById('account').submit();
        }
    </script>
}

