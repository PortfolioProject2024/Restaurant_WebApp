@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container" style="height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card border-primary mx-auto" style="max-width: 400px;">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Login to Your Account</h2>
                    <p class="lead mb-0">Enter your username and password to login</p>
                </div>
                <div class="card-body d-flex flex-column justify-content-center">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3" style="margin-bottom:10px">
                            <!-- Corrected margin-bottom class -->
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" style="margin-left:29px" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <!-- Corrected margin-bottom class -->
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 d-flex justify-content-center">
                            <button style="margin-top:20px; margin-left:100px" type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="mb-3 text-center" style="margin-top:25px">
                            <p class="forgot-password">
                                <a asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                        </div>
                    </form>

                    <hr />

                    <div class="mb-3 text-center">
                        <h5 class="mb-2">Quick Login</h5>
                        <div class="login-buttons d-flex flex-wrap justify-content-center gap-2" >
                            <button style="margin-bottom:15px" type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('admin@mail.com', 'Admin_2024')">Super Admin</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('portfolio@mail.com', 'Admin_2024')">Admin</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('dawood.rizwan@outlook.com', 'Admin_2024')">Employee 1</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('natalieaktas@hotmail.com', 'Admin_2024')">Employee 2</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('test1@mail.com', 'Admin_2024')">Customer 1</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('test2@mail.com', 'Admin_2024')">Customer 2</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('test3@mail.com', 'Admin_2024')">Customer 3</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="fillAndSubmit('test4@mail.com', 'Admin_2024')">Customer 4</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function fillAndSubmit(email, password) {
        document.getElementById('Input_Email').value = email;
        document.getElementById('Input_Password').value = password;
        document.getElementById('account').submit();
    }
</script>